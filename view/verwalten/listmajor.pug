extends index.pug

block content
    div.clearfix
    div.row
        div(class="col-md-12 col-sm-12 col-xs-12")
            div.x_panel
                div.x_title
                    h2 لیست رشته ها
                    div.clearfix
                div.x_content
                    table(id="datatable-buttons", class="table table-striped table-bordered")  
                        thead
                            tr
                                th  نام فارسی 
                                th  نام انگلیسی
                                th  کد 
                                th عملیات
                        tbody
                            each  major,i in majors
                                tr
                                    td   #{major.majorFarsi}
                                    td   #{major.majorEng}
                                    td   #{major.majorId}
                                    td   
                                        a(href="#", data-toggle="tooltip" ,data-placement="top", title="", data-original-title="رشته فعال است ")
                                            span(class="glyphicon glyphicon-eye-open",)
                                            | &nbsp&nbsp&nbsp
                                        a( href="#",data-toggle="tooltip" ,data-placement="top", title="", data-original-title="حذف ")
                                            span(class="glyphicon glyphicon-trash")
                                            | &nbsp&nbsp&nbsp
                                        a( href="#",data-toggle="tooltip" ,data-placement="top", title="", data-original-title="ویرایش ")
                                            span(class="glyphicon glyphicon-pencil")
                                            | &nbsp&nbsp&nbsp 





