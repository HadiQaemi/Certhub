doctype html
html
  head
    meta(http-equiv="Content-Type" , content="text/html; charset=UTF-8")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" , content="IE=edge")
    meta(name="viewport" , content="width=device-width, initial-scale=1")
    title login form

    link(rel="icon" ,  href="/public/images/favicon.ico", type="image/ico")
    link(href="/public/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="/public/vendors/bootstrap-rtl/dist/css/bootstrap-rtl.min.css" rel="stylesheet")
    link(href="/public/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet")
    link(href="/public/vendors/nprogress/nprogress.css" rel="stylesheet")
    link(href="/public/vendors/animate.css/animate.min.css" rel="stylesheet")
    link(href="/public/css/custom.css" rel="stylesheet")

  body.login
    div
      div.login_wrapper
        div
          section.login_content
            form(method="POST" , action="/verwalten/reg")
              h1 درخواست  حساب کاربری 
              if(errors)
                div(class="alert alert-danger alert-dismissible fade in text-right", role="alert")
                  button(type="button", class="close", data-dismiss="alert" ,aria-label="Close")
                    span(aria-hidden="true") ×
                  ul
                    for err in errors
                      li=err.msg
              div
                input(type="text" ,name="name", class="form-control", required="required", placeholder="نام" , value=(name) ? name: "")
              div
                input(type="text" ,name="family", class="form-control",required="required",  placeholder="نام خانوادگی", value=(family) ?family : "" )
              div
                input(type="text" ,name="mobile", class="form-control",required="required",  placeholder="شماره همراه", value=(mobile) ?mobile : "" )      
              div
                input(type="email",name="email",  class="form-control" ,required="required", placeholder="ایمیل", value=(email) ? email: "")
                p.font-gray-dark.text-right تنها ایمیل با دامنه دانشگاه معتبر می باشد
              div
                input(type="password" ,name="password", class="form-control" ,required="required", placeholder="رمز ورود")
              div
                //a(class="btn btn-default submit",  href="#") ارسال
                button(type="submit" , class="btn btn-default btn-block") ثبت درخواست
              div.clearfix

              div.separator
                p.change_link در حال حاضر عضو هستید؟
                  a(href="#signin" , class="to_register") ورود

                div.clearfix
                br

                div
                  p ©2019 CertHub

    script(src="/public/vendors/jquery/dist/jquery.min.js")
    script(src="/public/vendors/bootstrap/dist/js/bootstrap.min.js")
    script(src="/public/build/js/custom.min.js")
        
        