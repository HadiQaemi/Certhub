doctype html
html
  head
    meta(http-equiv="Content-Type" , content="text/html; charset=UTF-8")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" , content="IE=edge")
    meta(name="viewport" , content="width=device-width, initial-scale=1")
    title login form

    link(rel="icon" ,  href="/public/images/favicon.ico", type="image/ico")
    link(href="/public/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet")
    link(href="/public/vendors/bootstrap-rtl/dist/css/bootstrap-rtl.min.css" rel="stylesheet")
    link(href="/public/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet")
    link(href="/public/vendors/nprogress/nprogress.css" rel="stylesheet")
    link(href="/public/vendors/animate.css/animate.min.css" rel="stylesheet")
    link(href="/public/css/custom.css" rel="stylesheet")

  body.login
    div
      a(class="hiddenanchor" id="signup")
      a(class="hiddenanchor" id="signin")
      a(class="hiddenanchor" id="reset")

      div.login_wrapper
        div(class="animate form login_form")
          section.login_content
            form(method="POST")
              h1 ورود
              if(errors)
                div(class="alert alert-danger text-right")
                  a.close(href='#', data-dismiss='alert', aria-label='close') ×
                  ul
                    for error in errors
                      li=error.msg
              error_login
              div
                input(type="text", name="email" , class="form-control",  placeholder="ایمیل" , required="" , value=(emeil) ? emeil : "" )
              div
                input(type="password", name="password", class="form-control", placeholder="رمز ورود", required=""  )
              div
                //a(class="btn btn-default submit" href="/verwalten/login") ورود
                button(type="submit" , class="btn btn-default btn-block") ورود
                a(class="reset_pass" href="#reset") رمز ورود را از دست دادید؟
              div.clearfix
              div.separator
                p.change_link جدید در سایت؟
                  a(href="/verwalten/reg" ,class="to_register") ایجاد حساب 
                div.clearfix
                br
                p ©2019 CertHub
        div(id="rest_pass" ,class="animate form rest_pass_form")
          section.login_content
            form(action="index.html")
              h1 بازیابی رمز عبور
              div(class="form-group has-feedback")
                input( type="email" , class="form-control" , name="email" , placeholder="ایمیل" )
                div.form-control-feedback
                  i(class="fa fa-envelope-o text-muted")
              
              button(type="submit" , class="btn btn-default btn-block") بازیابی رمز عبور
              div.clearfix
              
              div.separator
                p.change_link جدید در سایت؟
                  a(href="#signup" ,  class="to_register")   ایجاد حساب 
                div.clearfix
                br

                div
                  p ©2019 CertHub
                
                
