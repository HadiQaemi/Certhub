extends index.pug
block content
    div.clearfix
    div.row
        div(class="col-md-12 col-sm-12 col-xs-12")
            div.x_panel
                div.x_title
                    h2 افزودن رشته جدید
                    div.clearfix    
                div.x_content
                    form(method="POST" , action="/verwalten/regmajor",class="form-horizontal form-label-left")
                        if(errors)
                            div(class="alert alert-danger alert-dismissible fade in text-right", role="alert")
                            button(type="button", class="close", data-dismiss="alert" ,aria-label="Close")
                                span(aria-hidden="true") ×
                            ul
                                for err in errors
                                    li=err.msg
                        div.form-group
                            label(class="control-label col-md-3 col-sm-3 col-xs-12" ,for="first-name") گروه   
                            div(class="col-md-6 col-sm-6 col-xs-12")
                                select(name="majortype",class="form-control")
                                    option() انتخاب کنید...
                                    option(value="1000") فنی و مهندسی
                                    option(value="2000") علوم پزشکی
                                    option(value="3000")    علوم پایه
                                    option(value="4000")    علوم انسانی


                        div.form-group
                            label(class="control-label col-md-3 col-sm-3 col-xs-12" ,for="first-name") نام رشته به فارسی
                                <span class="required"> * </span>
                            div(class="col-md-6 col-sm-6 col-xs-12")
                                input(type="text" ,name="majorFarsi", class="form-control col-md-7 col-xs-12",required="required")
                        div.form-group
                            label(class="control-label col-md-3 col-sm-3 col-xs-12" ,for="first-name") نام رشته به انگلیسی
                            div(class="col-md-6 col-sm-6 col-xs-12")
                                input(type="text" ,name="majorEng", class="form-control col-md-7 col-xs-12")      
                        div.form-group
                            label(class="control-label col-md-3 col-sm-3 col-xs-12" ,for="first-name") کد رشته
                                <span class="required"> * </span>
                            div(class="col-md-6 col-sm-6 col-xs-12")
                                input(type="text",name="majorId",  class="form-control col-md-7 col-xs-12" ,required="required")                    
                        div.ln_solid
                        div.form-group
                            div(class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3")
                            button(type="submit" , class="btn btn-success") ثبت درخواست
